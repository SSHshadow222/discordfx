<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="420.0"
      maxWidth="800.0"
      minHeight="420.0"
      minWidth="800.0"
      style="-fx-background-color: #36393f;"
      stylesheets="@../../css/stage/Login.css"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.discordfx.controller.Login">
   <Label alignment="CENTER" prefHeight="0.0" prefWidth="400.0" text="Welcome back!" textFill="WHITE">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
      <VBox.margin>
         <Insets left="30.0" top="40.0" />
      </VBox.margin>
   </Label>
   <Label alignment="CENTER" prefWidth="400.0" text="We're so excited to see you again!" textFill="#868686">
      <VBox.margin>
         <Insets bottom="15.0" left="30.0" top="5.0" />
      </VBox.margin>
      <font>
         <Font size="15.0" />
      </font>
   </Label>
   <HBox maxHeight="0.0" maxWidth="400.0">
      <children>
         <Label fx:id="labelLoginInfo1" text="E-MAIL OR PHONE NUMBER" textFill="#d3d3d3">
            <font>
               <Font name="Calibri Bold" size="15.0" />
            </font>
            <padding>
               <Insets left="3.0" />
            </padding>
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Label>
         <Label fx:id="labelLoginInfo2" text="*" textFill="#ff5959">
            <font>
               <Font name="Calibri" size="15.0" />
            </font>
            <padding>
               <Insets left="5.0" />
            </padding>
         </Label>
      </children>
      <VBox.margin>
         <Insets left="30.0" top="10.0" />
      </VBox.margin>
   </HBox>
   <TextField fx:id="textFieldLogin" maxWidth="400.0" onKeyPressed="#handleTextFieldLoginKeyPressed" prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: #202225; -fx-text-fill: #ffffff;">
      <VBox.margin>
         <Insets left="30.0" top="10.0" />
      </VBox.margin>
      <font>
         <Font name="Arial" size="15.0" />
      </font>
   </TextField>
   <HBox maxWidth="400.0">
      <VBox.margin>
         <Insets left="30.0" top="10.0" />
      </VBox.margin>
      <Label fx:id="labelPasswordInfo1" text="PASSWORD" textFill="LIGHTGRAY">
         <font>
            <Font name="Calibri" size="15.0" />
         </font>
         <padding>
            <Insets left="3.0" />
         </padding>
      </Label>
      <Label fx:id="labelPasswordInfo2" text="*" textFill="#ff5959">
         <font>
            <Font name="Calibri" size="15.0" />
         </font>
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <padding>
            <Insets left="5.0" />
         </padding>
      </Label>
   </HBox>
   <PasswordField fx:id="textFieldPasswd" maxWidth="400.0" onKeyPressed="#handleTextFieldPasswdKeyPressed" prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: #202225; -fx-text-fill: #ffffff;">
      <VBox.margin>
         <Insets left="30.0" top="10.0" />
      </VBox.margin>
      <font>
         <Font name="Calibri Bold" size="15.0" />
      </font>
   </PasswordField>
   <Label fx:id="labelForgotPasswd" layoutX="40.0" layoutY="203.0" text="Forgot your password?" textFill="#23a4f4">
      <font>
         <Font name="Calibri" size="15.0" />
      </font>
      <VBox.margin>
         <Insets left="30.0" top="10.0" />
      </VBox.margin>
   </Label>
   <Button fx:id="buttonLogin" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" maxHeight="40.0" maxWidth="400.0" mnemonicParsing="false" onKeyPressed="#handleButtonLoginKeyPressed" onMouseClicked="#handleLogging" prefHeight="40.0" prefWidth="400.0" text="Log In" textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="Arial Bold" size="16.0" />
      </font>
      <VBox.margin>
         <Insets left="30.0" top="25.0" />
      </VBox.margin>
   </Button>
   <HBox maxWidth="400.0" prefHeight="0.0" prefWidth="200.0">
      <VBox.margin>
         <Insets left="30.0" top="10.0" />
      </VBox.margin>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Need an account? " textFill="#868686">
         <font>
            <Font name="Calibri" size="15.0" />
         </font>
      </Label>
      <Label fx:id="labelRegister" onMouseClicked="#handleRegistering" text="Register" textFill="#23a4f4">
         <font>
            <Font name="Calibri" size="15.0" />
         </font>
      </Label>
   </HBox>
</VBox>
